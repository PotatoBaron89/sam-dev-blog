<div class="bg-white py-6 mx-6 rounded-xl shadow">
  <div class="mx-auto max-w-7xl px-3 lg:px-4">
    <div class="mx-auto max-w-2xl lg:max-w-4xl">
      <div class="mt-3 space-y-6 lg:mt-8 lg:space-y-12">
        <% if @pagy.pages > 1 %>
          <div class="my-6 text-center">
            <%== pagy_nav(@pagy) %>
          </div>
        <% end %>

        <%= render partial: "components/article_card", collection: @articles.limit(10), cached: true %>

        <%= render partial: "components/news_letter" %>
      </div>
    </div>
  </div>
</div>