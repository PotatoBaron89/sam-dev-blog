<% article = article_card %>
<%= turbo_frame_tag "article-#{article.id}" do %>
<article class="relative isolate flex flex-col gap-3 lg:flex-row rounded-xl shadow p-1">
  <div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
    <%= image_tag article.get_image_url, class: "article-image" %>

    <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
  </div>

  <% if current_user&.admin? %>
    <div class="absolute right-8 top-3 px-2 flex gap-2 hover:bg-blue-400 rounded-xl min-w-12">
      <%= link_to "Edit", edit_article_path(article), class: "text-gray-600" %>
    </div>
  <% end %>

  <div>
    <div class="flex items-center gap-x-4 text-xs">
      <time datetime="2020-03-16" class="text-gray-500">
        <%= article.created_at.strftime("%d/%m/%Y") %>
      </time>

      <% article.categories.each do |category| %>
        <span class="<%= category.colour %> text-white p-1 relative z-10 rounded-full px-3 py-1.5 font-medium">
          <%= category.name %>
        </span>
      <% end %>
    </div>

    <div class="group relative max-w-xl mt-3">
      <h3 class="">
        <%= link_to article.name, article_path(article) %>
      </h3>

      <p class="mt-5 text-sm leading-6 text-gray-600">
        TODO: Description. Illo sint voluptas. Error voluptates culpa eligendi. Hic vel totam vitae illo. Non aliquid explicabo necessitatibus unde. Sed exercitationem placeat consectetur nulla deserunt vel iusto corrupti dicta laboris incididunt.
      </p>
    </div>
  </div>
</article>
<% end %>