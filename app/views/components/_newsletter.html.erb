
<%# unless user_signed_in? && current_user.news_letter_subscriptions.exists? %>
  <div class="relative rounded-xl dark:shadow-amber-300 isolate overflow-hidden relative flex flex-col gap-3 lg:flex-row rounded-xl shadow p-1 py-12">
    <div class="flex flex-col justify-center items-center w-full">
      <h3 class="pt-3 text-3xl font-bold tracking-tight text-emerald-400 sm:text-4xl text-center">
        Subscribe to my newsletter
      </h3>

      <div class="mt-6 flex max-w-md gap-x-4">
        <%= form_for(NewsLetterSubscription.new) do |f| %>
          <div class="flex flex-col gap-3">
            <% if user_signed_in? %>
              <%= f.hidden_field :email, value: current_user.email %>
            <% else %>
              <div class="field">
                <%= f.label :email, class: "text-xs font-medium text-white" %>
                <div class="relative mt-2 rounded-md shadow-sm">

                  <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                    <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z" />
                      <path d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z" />
                    </svg>
                  </div>

                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full rounded-md border-0 py-1.5 pl-10 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
                </div>
              </div>
            <% end %>
            <%= f.submit "Subscribe", data: { turbo: false }, class: "btn btn-large btn-primary btn-outline-white w-full" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="absolute bg-blue-900 left-1/2 top-0 -z-10 -translate-x-1/2 blur-3xl xl:-top-6" aria-hidden="true">
      <div class="aspect-[1155/678] w-[72.1875rem] bg-blue-200 opacity-60" style="clip-path: polygon(14.1% 44.1%, 100% 11.6%, 97.5% 26.9%, 05.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 98.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 54.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 34.1% 94.1%)"></div>
    </div>
  </div>
<%# end %>

