<section class="bg-form mx-12 mx-auto lg:w-2/3 m:w-4/5  rounded-xl flex flex-col justify-evenly py-4">
  <h2 class="text-blue-800 text-center mt-3 mb-8">
    Profile
  </h2>

  <%= form_with(model: current_user, url: profile_update_path, method: :patch, local: true) do |form| %>

      <div class="form_container">
        <div class="form_field py-5">
          <%= image_tag avatar_url_for(form.object), class: "rounded-full border-2 border-black cursor-pointer" %>

          <div>
            <%= form.file_field :avatar, accept: "image/*", class: "file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-gray-700 hover:file:bg-gray-100 " %>
          </div>
        </div>

        <div class="form_field pb-3">
          <label for="first_name">
            First Name
          </label>
          <%= form.text_field :first_name, class: "form-control", required: true, placeholder: 'John' %>
        </div>

        <div class="form_field pb-3">
          <label for="last_name">
            Last Name
          </label>
          <%= form.text_field :last_name, class: "form-control", required: false, placeholder: 'Smith' %>
        </div>

        <div class="form_field pb-3">
          <label for="alias">
            Alias
          </label>
          <%= form.text_field :alias, class: "form-control", required: false, placeholder: 'John' %>
        </div>

        <div class="form_field pb-3">
          <label for="location">Location</label>
          <%= form.collection_select :location, country_list, :to_s, :to_s, { prompt: "Select a country" }, class: "form_input" %>
        </div>
      </div>

    <div class="form_field p-8">
      <%= form.submit "Update", class: "btn-primary" %>
    </div>
  <% end %>
</section>