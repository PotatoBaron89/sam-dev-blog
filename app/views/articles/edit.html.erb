<%= turbo_frame_tag "article-#{@article.id}" do %>
  <div class="relative isolate flex flex-col gap-3 lg:flex-row rounded-xl shadow p-1">
    <!--    Back Button-->
    <%= link_to show_card_article_path(@article), class: "absolute top-5 right-5 rounded-full text-white w-12 h-12  flex justify-center inline-flex items-center justify-center p-4 px-6 py-3 overflow-hidden font-medium text-indigo-600 transition duration-300 ease-out border-2 border-purple-500 rounded-full shadow-md group" do %>
      <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-purple-500 group-hover:translate-x-0 ease">
        Back
      </span>
      <span class="absolute p-3 flex items-center justify-center w-full h-full text-purple-500 transition-all duration-300 transform group-hover:translate-x-full ease">
        <%= image_tag 'svg/left_arrow.svg' %>
      </span>
      <span class="relative invisible"></span>
    <% end %>

    <div class="flex flex-row justify-around w-full">
      <%= form_with(model: @article, url: article_path, method: :patch, local: true, class: "w-full") do |form| %>
        <section class="bg-form flex flex-col items-center p-1 mx-2">
          <h1 class="mb-8">Edit Article</h1>

          <div class="w-full flex flex-row gap-5">
            <%= form.label :title %>
            <%= form.text_field :name, class: "text-input" %>
          </div>

          <div class="w-full flex flex-row gap-5 pt-1">
            <%= form.label :image %>
            <%= form.file_field :card_image, class: "text-gray-900 dark:text-gray-300" %>
          </div>

          <div class="w-full  justify-between ">
            <%= form.label :article_content %>
            <%= form.rich_text_area :content, class: "border-2 h-72 border-blue-300" %>
          </div>

          <div class="flex flex-col p-5">
            <%= form.submit "Update Article", class: "btn btn-primary p-2 dark:btn-outline" %>
          </div>
        </section>
      <% end %>
    </div>
  </div>
<% end %>
