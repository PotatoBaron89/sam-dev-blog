<%= turbo_frame_tag "article-#{@article.id}" do %>
  <div class="bg-form border-y-2 my-3 border-blue-300 p-3 ml-8">
    <div class="flex flex-row justify-around w-full">
      <%= form_with(model: @article, url: article_path, method: :patch, local: true, class: "w-full") do |form| %>
        <section class="bg-form flex flex-col items-center p-1 mx-2">
          <h1>Edit Article</h1>

          <div class="w-full flex flex-row gap-5">
            <%= form.label :title %>
            <%= form.text_field :name, class: "border-2 border-blue-300" %>
          </div>

          <div class="w-full  justify-between trix-content">
            <%= form.rich_text_area :name, class: "border-2 h-72 border-blue-300" %>
          </div>

          <div class="flex flex-col p-5">
            <%= form.submit "Update Article", class: "bg-blue-300 p-2" %>
          </div>
        </section>
      <% end %>
    </div>
  </div>
<% end %>
