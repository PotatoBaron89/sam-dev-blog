<%= turbo_frame_tag "comment_#{@comment.id}" do %>
  <div class="relative">
  <!--    Back Button-->
  <%= link_to comment_path(@comment), class: "absolute top-5 right-5 rounded-full text-white w-12 h-12  flex justify-center inline-flex items-center justify-center p-4 px-6 py-3 overflow-hidden font-medium text-indigo-600 transition duration-300 ease-out border-2 border-purple-500 rounded-full shadow-md group" do %>
    <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-purple-500 group-hover:translate-x-0 ease">
        Back
      </span>
    <span class="absolute p-3 flex items-center justify-center w-full h-full text-purple-500 transition-all duration-300 transform group-hover:translate-x-full ease">
        <%= image_tag 'svg/left_arrow.svg' %>
      </span>
    <span class="relative invisible"></span>
  <% end %>
  </div>

  <%= form_for(@comment, data: { turbo_frame: 'comments', turbo_action: "advance" }) do |f| %>
    <div class="flex flex-col gap-3">
      <%= f.hidden_field :commentable_type, value: @comment.commentable_type %>
      <%= f.hidden_field :commentable_id, value: @comment.commentable_id %>
      <%= f.label :edit_comment %>
      <%= f.text_area :body, class: "w-full h-24 p-3 text-black rounded" %>
      <%= f.submit "Save", class: "btn-primary" %>
    </div>
  <% end %>
<% end %>