<div class="flex flex-col justify-center col-span-3">
  <h2 class="mb-6 text-center">Register</h2>

  <div class='bg-form flex justify-center border-2 border-blue-200 rounded-2xl py-12'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-input  w-full' %>
      </div>

      <br />

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>

        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'text-input w-full' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-input w-full' %>
      </div>
      <br class="text-yellow-300 bg-yellow-30">
      <%= f.submit "Register", class: "cursor-pointer btn-primary dark:btn-outline w-full mt-3" %>
    <% end %>
  </div>
</div>
