<header class=" bg-gray-900 dark:bg-slate-900 border-2 border-blue-400 text-white shadow rounded-xl mb-5">
  <div class="flex flex-col justify-center items-center">
    <div class="relative w-full">
      <%= link_to root_path, data: { turbo: true } do %>
        <h1 class="mb-3 p-2 text-center text-blue-300 dark:text-white">Samuel O'Donnell</h1>
      <% end %>
    </div>

    <nav class="flex flex-wrap justify-between w-full lg:gap-3 gap-1 rounded-full m-3 w-full">
      <div class="flex flex-start gap-2 text-yellow-200">
        <div class="m-3 h-6 flex justify-between items-center">
          <%= link_to "Home", root_path, data: { turbo: true }, class: "border-x-2 md:w-32 w-20 rounded border-blue-400 hover:text-white text-center hover:border-yellow-400 animated text-gray-100" %>
        </div>

        <div class="m-3 h-6 flex justify-between items-center">
          <div class="border-x-2 h-6 md:w-32 w-20 rounded border-blue-400 hover:text-white text-center hover:border-yellow-400 animated text-gray-100 flex justify-center items-center">
            <%= render partial: "components/dropdown_button", locals: {
              collection: top_nav_article_elements
            } %>
          </div>
        </div>
      </div>

      <div class="rounded-full flex flex-start">
        <% top_nav_account_elements.each do |element| %>
          <div class="rounded-full m-3 text-gray-100 h-6 flex justify-center items-center">
            <%= button_to element[:name], element[:path], method: (element[:method] || :get), class: "border-x-2 w-20 rounded border-blue-400 hover:text-white text-center hover:border-yellow-400 animated text-gray-100" %>
          </div>
        <% end %>
      </div>
    </nav>
  </div>
</header>